{
  "manifest_version": 3,
  "name": "LinkedIn Job Application Logger",
  "version": "1.1",
  "description": "Logs applied jobs from LinkedIn, supports SPA navigation, popup view, and CSV export",
  "permissions": [
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.linkedin.com/jobs/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
